{
  "author": "Elias Menon",
  "license": "MIT",
  "scripts": {
    "compile-styles": "sass ./src/popup/css/style.scss ./dist/popup/css/style.css",
    "prepare": "webpack && yarn run compile-styles && ncp ./src/img ./dist/img",
    "build": "yarn run prepare && web-ext build -i src/ package.json yarn.lock README.md webpack.config.js -o",
    "test": "yarn run prepare && web-ext run --watch-ignored ./node_modules/* --verbose"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^9.0.0",
    "ncp": "^2.0.0",
    "sass": "^1.34.1",
    "web-ext": "^5.5.0",
    "webextension-polyfill": "^0.8.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  }
}
