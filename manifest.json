{
  "manifest_version": 2,
  "name": "yttwthmode",
  "version": "1.1.1",
  "description": "Twitch-like theater mode for Youtube livestreams and archives.",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "dist/content-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "dist/popup/popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
