{
  "manifest_version": 2,
  "name": "yttwthmode",
  "version": "1.2.1",
  "description": "Twitch-like theater mode for Youtube livestreams and archives.",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "dist/content-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "dist/popup/popup.html",
    "default_icon": {
      "128": "dist/img/logo_128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "128": "dist/img/logo_128.png"
  }
}
